<button bindtap="handleBtnClick" size="mini">按钮</button>
<button bind:tap="handleBtnClick" size="mini">按钮</button>
<button catch:tap="handleBtnClick" size="mini">按钮</button>

<!-- <view id="box" class="box" bind:touchstart="handleTouchStart" bind:touchmove="handleTouchmove"
  bind:touchend="handleTouchEnd" bind:tap="handleTap" bind:longpress="handleLongPress"></view> -->

<button id="btn" size="mini" bind:tap="handleClickEvent" bindtouchend="handleTouchEndEvent">button</button>

<view class="outer" id="outer" bindtap="handleOuter">
  <view class="inner" bindtap="handleInner" id="inner"></view>
</view>
<!-- 事件的传递参数 -->

<view class="container">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="item" bindtap="handleItemClick" data-index="{{index}}" data-item="{{item}}">{{item}}</view>
  </block>
</view>

